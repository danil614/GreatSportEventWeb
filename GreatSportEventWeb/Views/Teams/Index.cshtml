@model IQueryable<Team>

@{
    ViewData["Title"] = "Команды";
    const string controllerName = "Teams";
}

<h1>@ViewData["Title"]</h1>

@await Html.PartialAsync("_MainButtonPanel", controllerName)

<table id="dataTable" class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            <a href="#" data-sort-by="name" data-sort-direction="desc">Название команды</a>
        </th>
        <th>
            <a href="#" data-sort-by="location" data-sort-direction="desc">Место проживания</a>
        </th>
        <th>
            <a href="#" data-sort-by="come-from" data-sort-direction="desc">Откуда команда</a>
        </th>
        <th>
            <a href="#" data-sort-by="rating" data-sort-direction="desc">Рейтинг команды</a>
        </th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @await Html.PartialAsync("_Table", Model)
    </tbody>
</table>

<script>
    $(document).ready(function() {
        // Назначаем обработчик события клика на заголовки столбцов
        $("#dataTable th a").on("click", function(event) {
            event.preventDefault();
            handleSortClick('@controllerName', $(this));
        });
    });
</script>