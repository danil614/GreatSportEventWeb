@model IQueryable<SportEvent>

@{
    ViewData["Title"] = "Спортивные мероприятия";
    const string controllerName = "SportEvents";
}

<h1>@ViewData["Title"]</h1>

@await Html.PartialAsync("_MainButtonPanel", controllerName)

<table id="dataTable" class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            <a href="#" data-sort-by="type" data-sort-direction="desc">Тип мероприятия</a>
        </th>
        <th>
            <a href="#" data-sort-by="location" data-sort-direction="desc">Место проведения</a>
        </th>
        <th>
            <a href="#" data-sort-by="datetime" data-sort-direction="desc">Начало мероприятия</a>
        </th>
        <th>
            <a href="#" data-sort-by="duration" data-sort-direction="desc">Длительность</a>
        </th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @await Html.PartialAsync("_Table", Model)
    </tbody>
</table>

<script>
    $(document).ready(function() {
        // Назначаем обработчик события клика на заголовки столбцов
        $("#dataTable th a").on("click", function(event) {
            event.preventDefault();
            handleSortClick('@controllerName', $(this));
        });
    });
</script>