@model IQueryable<Ticket>

@{
    ViewData["Title"] = "Билеты";
    const string controllerName = "Tickets";
}

<h1>@ViewData["Title"]</h1>

@await Html.PartialAsync("_MainButtonPanel", controllerName)

<table id="dataTable" class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            <a href="#" data-sort-by="viewer" data-sort-direction="desc">Зритель</a>
        </th>
        <th>
            <a href="#" data-sort-by="sport-event" data-sort-direction="desc">Спортивное мероприятие</a>
        </th>
        <th>
            <a href="#" data-sort-by="seat" data-sort-direction="desc">Посадочное место</a>
        </th>
        <th>
            <a href="#" data-sort-by="price" data-sort-direction="desc">Цена</a>
        </th>
        <th>
            <a href="#" data-sort-by="employee" data-sort-direction="desc">Продавец</a>
        </th>
        <th>
            <a href="#" data-sort-by="datetime" data-sort-direction="desc">Дата продажи</a>
        </th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @await Html.PartialAsync("_Table", Model)
    </tbody>
</table>

<script>
    $(document).ready(function() {
        // Назначаем обработчик события клика на заголовки столбцов
        $("#dataTable th a").on("click", function(event) {
            event.preventDefault();
            handleSortClick('@controllerName', $(this));
        });
    });
</script>