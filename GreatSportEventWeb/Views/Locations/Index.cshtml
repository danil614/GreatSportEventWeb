@model IQueryable<Location>

@{
    ViewData["Title"] = "Места расположения";
    const string modelName = "Locations";
}

<h1>@ViewData["Title"]</h1>

<div class="col-sm-8">
    <div class="row mt-4 mb-3 gap-1">
        <div class="col-sm-2">
            <button class="btn btn-outline-dark w-100 btn-block" type="button" onclick="createItem('@modelName')">
                <i class="fa fa-plus" aria-hidden="true"></i>&nbsp; Создание
            </button>
        </div>
        <div class="col-sm-2">
            <button class="btn btn-outline-dark w-100" type="button" 
                    onclick="location.href='@Url.Action("ExportToExcel", modelName)'">
                <i class="fa fa-file-excel-o" aria-hidden="true"></i>&nbsp; Экспорт
            </button>
        </div>
        <div class="col-sm-2">
            <button class="btn btn-outline-dark w-100" type="button" onclick="refreshCache('@modelName')">
                <i class="fa fa-refresh" aria-hidden="true"></i>&nbsp; Обновить
            </button>
        </div>
    </div>
</div>

<table id="dataTable" class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            <a href="#" data-sort-by="name" data-sort-direction="desc">Название</a>
        </th>
        <th>
            <a href="#" data-sort-by="city" data-sort-direction="desc">Город</a>
        </th>
        <th>
            <a href="#" data-sort-by="address" data-sort-direction="desc">Адрес</a>
        </th>
        <th>
            <a href="#" data-sort-by="type" data-sort-direction="desc">Тип</a>
        </th>
        <th>
            <a href="#" data-sort-by="capacity" data-sort-direction="desc">Вместимость</a>
        </th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @await Html.PartialAsync("_Table", Model)
    </tbody>
</table>

<script>
    $(document).ready(function() {
        // Назначаем обработчик события клика на заголовки столбцов
        $("#dataTable th a").on("click", function(event) {
            event.preventDefault();
            handleSortClick('@modelName', $(this));
        });
    });
</script>