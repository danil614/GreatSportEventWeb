@model IQueryable<User>

@{
    ViewData["Title"] = "Пользователи";
    const string controllerName = "Users";
}

<h1>@ViewData["Title"]</h1>

@await Html.PartialAsync("_MainButtonPanel", controllerName)

<table id="dataTable" class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            <a href="#" data-sort-by="login" data-sort-direction="desc">Логин</a>
        </th>
        <th>
            <a href="#" data-sort-by="type" data-sort-direction="desc">Тип пользователя</a>
        </th>
        <th>
            <a href="#" data-sort-by="full-name" data-sort-direction="desc">ФИО</a>
        </th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @await Html.PartialAsync("_Table", Model)
    </tbody>
</table>

<script>
    $(document).ready(function() {
        // Назначаем обработчик события клика на заголовки столбцов
        $("#dataTable th a").on("click", function(event) {
            event.preventDefault();
            handleSortClick('@controllerName', $(this));
        });
    });
</script>